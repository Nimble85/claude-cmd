# ============================================================================
# REQUIRED: Enable Microsoft Foundry Integration
# ============================================================================

# CRITICAL: This enables Microsoft Foundry support in Claude Code
export CLAUDE_CODE_USE_FOUNDRY=1

# ============================================================================
# REQUIRED: Your Azure Foundry Configuration
# ============================================================================

# Your Azure resource name (just the name, not full URL)
# Get this from Azure Portal > Your Foundry Resource
# Format: "resource-name" (e.g., "my-resource-eastus2")
export ANTHROPIC_FOUNDRY_RESOURCE="YOUR-RESOURCE-NAME"

# Your API Key from Azure Portal
# Get this from Azure Portal > Your Foundry Resource > Keys and Endpoint
export ANTHROPIC_FOUNDRY_API_KEY="YOUR-API-KEY-HERE"

# ============================================================================
# OPTIONAL: Model deployment names
# ============================================================================
# Set these to match your deployment names in Microsoft Foundry
export ANTHROPIC_DEFAULT_OPUS_MODEL="claude-opus-4-5"
export ANTHROPIC_DEFAULT_SONNET_MODEL="claude-sonnet-4-5"
export ANTHROPIC_DEFAULT_HAIKU_MODEL="claude-haiku-4-5"

# ============================================================================
# Confirmation message
# ============================================================================
echo "âœ… Claude Code configured for Microsoft Foundry"
echo "   Foundry Enabled: $CLAUDE_CODE_USE_FOUNDRY"
echo "   Resource: $ANTHROPIC_FOUNDRY_RESOURCE"
echo "   API Key: ${ANTHROPIC_FOUNDRY_API_KEY:0:20}..."
echo "   Default Model: $ANTHROPIC_DEFAULT_OPUS_MODEL"
